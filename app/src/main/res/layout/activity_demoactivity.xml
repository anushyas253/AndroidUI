<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Demoactivity">

    <Button
        android:id="@+id/radioB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:onClick="buttonclick"
        android:text="Radiobuttonedmo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/checkB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:onClick="buttonclick"
        android:text="Checkbox demo"
        app:layout_constraintEnd_toEndOf="@+id/radioB"
        app:layout_constraintTop_toBottomOf="@+id/radioB" />

    <Button
        android:id="@+id/listB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:onClick="buttonclick"
        android:text="Listviewdemo"
        app:layout_constraintStart_toStartOf="@+id/checkB"
        app:layout_constraintTop_toBottomOf="@+id/checkB" />

    <Button
        android:id="@+id/spinB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:onClick="buttonclick"
        android:text="Spinnerdemo"
        app:layout_constraintStart_toStartOf="@+id/listB"
        app:layout_constraintTop_toBottomOf="@+id/listB" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/faB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="31dp"
        android:clickable="true"
        android:onClick="fabclick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_input_add"

        android:tooltipText="About US"/>

    <Button
        android:id="@+id/customB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="72dp"
        android:onClick="buttonclick"
        android:text="CustomAdapter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinB" />
</androidx.constraintlayout.widget.ConstraintLayout>